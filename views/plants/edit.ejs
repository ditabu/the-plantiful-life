<%- include('../partials/header') %>
<% if (plant.plantOwner.toString()===currentUser.toString()){ %>
  <section id="edit">
    <form class="edit-form" action="/plants/<%=plant._id%>/update" method="POST">
        <h1>EDIT PLANT DETAILS</h1>
        <br>
        <div>Plant Name:</div>
            <input value="<%= plant.plantName %>" name="plantName">
        <br>
        <br>
        <div>Plant Species:</div>
            <input value="<%= plant.plantSpecies %>" name="plantSpecies">
        <br>
        <br>
        <div>Light:</div>
            <select value="<%= plant.light %>" name="light">
              <option value="LOW">low</option>
              <option selected value="MEDIUM">medium</option>
              <option value="HIGH">high</option>
            </select>
        <br>
        <br>    
        <div>Water:</div>
            <select value="<%= plant.water %>"name="water">
              <option value="LOW">low</option>
              <option value="MEDIUM">medium</option>
              <option value="HIGH">high</option>
            </select>
        <br>
        <br>   
        <div>Groom:</div>
            <select value="<%= plant.groom %>" name="groom">
              <option value="LOW">low</option>
              <option value="MEDIUM">medium</option>
              <option value="HIGH">high</option>
            </select>
        <br>
        <br>
        <div>Climate:</div>
            <select value="<%= plant.climate %>" name="climate">
              <option value="COLD">cold</option>
              <option value="DRY">dry</option>
              <option value="HUMID">humid</option>
            </select>
        <br>
        <br>
        <br>
      </form>
        <form action="/plants/<%= plant._id %>/edit/update?_method=PUT" method="POST">
          <button id="small-btn">Save Changes</button>
      </form>
        <br> 
    </section>
    <% } %>    

<%- include('../partials/footer') %>    