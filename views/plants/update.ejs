<%- include('../partials/header') %>
    <% if (plant.plantOwner.toString()===currentUser.toString()){ %>    
    <form class="details-form" action="/plants/<%= plant._id %>/edit/update?_method=PUT" method="POST"> 
        <h1>PLANT UPDATE</h1>
        <section id="show-details">
          <div>Plant Name:</div>
          <div><%= plant.plantName %></div>
          <div>Plant Species:</div>
          <div><%= plant.plantSpecies %></div>
          <div>Light:</div>
          <div><%= plant.light %></div>
          <div>Water:</div>
          <div><%= plant.water %></div>
          <div>Groom:</div>
          <div><%= plant.groom %></div>
          <div>Climate:</div>
          <div><%= plant.climate %></div>
          <div><%= plant.plantOwner %></div>
      </section>
        <br>
        <br>     
        <a href ="/plants/<%=plant._id%>/edit/update"><div class="small-btn">View All Plants</div></a>
      </form>
    <% } %> 

<%- include('../partials/footer') %> 