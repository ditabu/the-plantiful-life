<%- include('../partials/header') %>

<form class="edit-form" action="/plants/<%= plant._id %> " method="POST"> 
        <h1>Plant Details</h1>
        <div>Plant Name:</div>
        <input value="<%= plant.plantName %>" name="plantName" >
        <div>Plant Species:</div>
        <input value="<%= plant.plantSpecies %>" name="plantSpecies" >
        <div>Light:</div>
        <input value="<%= plant.light %>" name="light" >
        <div>Water:</div>
        <input value="<%= plant.water %>"name="water">
        <div>Groom:</div>
        <input value="<%= plant.groom %>" name="groom">
        <div>Climate:</div>
        <input value="<%= plant.climate %>" name="climate">

   
    <% if (plant.plantOwner.toString()===currentUser.toString()){ %>
      
      <button type="submit">edit</button>
      <% } %> 
  </form>

    <br>
    <br>
    <h2>Care Logs</h2>
    <p>Keep your plants alive by logging in when you water and groom your plants. Watch your plants tthrive and grow before your very eyes.</p>
    <form id="care-log-form" method="POST" action="/plants/<%= plant._id %>/careLogs">
        <label>Watered</label>
        <input type="datetime-local" name="watered">
        <label>Groomed</label>
        <input type="datetime-local" name="groomed">
        <input type="submit" value="Add Care Log">
    </form>

    <% if (plant.careLog.length) { %>
        <table>
          <thead>
            <tr>
              <th>Watered</th>
              <th>Groomed</th>
            </tr>
          </thead>
          <tbody>
            <% plant.careLog.forEach(function(p) { %>
              <tr>
                <td><%= p.watered %></td>
                <td><%= p.groomed %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h5>No Care Logs Yet</h5>
      <% } %>
<%- include('../partials/footer') %>