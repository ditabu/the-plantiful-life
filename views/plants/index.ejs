<%- include('../partials/header') %>
    <a href="/plantistas/new" class="brand-logo left">The Plantiful Life</a>
    <table id="plantList">
        <thead>
          <tr>
            <th>Plant Name</th>
            <th>Plant<br>Species</th>
          </tr>
        </thead>
        <tbody>
          <% plants.forEach(function(p) { %>
            <tr>
              <td><%= p.plantName %></td>
              <td><%= p.plantSpecies %></td>
              <td><a href="/plants/<%= p._id %>">DETAILS</a></td>
              <td><form class="delete-form" method="POST" action="/plants/<%= p._id %>?_method=DELETE"> 
                <button type="submit">X</button></form></td>
            </tr>
            <% }); %>
          </tbody>
        </table>        
<%- include('../partials/footer') %>