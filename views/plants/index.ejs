<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Plants List</title>
</head>
<body>
    <a href="/plantistas/new" class="brand-logo left">The Plantiful Life</a>
    <table id="plantList">
        <thead>
          <tr>
            <th>Plant Name</th>
            <th>Plant<br>Species</th>
          </tr>
        </thead>
        <tbody>
          <% plants.forEach(function(p) { %>
            <tr>
              <td><%= p.plantName %></td>
              <td><%= p.plantSpecies %></td>
              <td><a href="/plants/<%= p._id %>">DETAILS</a></td>
              <td class="delete-form" method="POST" action="/plants/<%= p._id %>?_method=DELETE"> 
                <button type="submit">X</button></td>
            </tr>
            <% }); %>
          </tbody>
        </table>        
</body>
</html>